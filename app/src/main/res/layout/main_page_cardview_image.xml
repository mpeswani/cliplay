<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/image"
            android:fontFamily="@string/roboto_regular_medium"
            android:textSize="14sp"
            tools:text="Kathryn Collins" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_alignBaseline="@+id/image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/image"
            android:fontFamily="@string/roboto_regular_light"
            android:textSize="12sp"
            tools:text="9hr ago" />


        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/inner_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_below="@+id/image"
            android:layout_marginTop="20dp"
            android:background="@drawable/grad_002_night_fade"
            android:fontFamily="@string/roboto_regular_medium"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_more_vert_black_24dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inner_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@string/roboto_regular"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Greyhound divisively hello coldly wonderfully marginally far upon excluding." />

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginStart="12dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />


        <LinearLayout
            android:id="@+id/ll_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@+id/ll_reply"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fav_count"
                style="@style/textview_options"
                tools:text="99.0k" />

            <ImageView
                android:id="@+id/favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@+id/ll_share"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reply_count"
                style="@style/textview_options"
                tools:text="99.0k" />

            <ImageView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_reply_black_24dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/share_count"
                style="@style/textview_options"
                tools:text="99.0k" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_share_black_24dp" />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>