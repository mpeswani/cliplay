<resources>

    <!-- Base application theme. -->

    <style name="MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@drawable/color_bottom_nav_item</item>
        <item name="itemTextColor">@drawable/color_bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigation.Overline</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigation.Overline
        </item>
        <item name="textAllCaps">true</item>
        <item name="paddingStart">@dimen/_16sdp</item>
        <item name="paddingEnd">@dimen/_16sdp</item>
    </style>

    <style name="TextAppearance.BottomNavigation.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="textview_options">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@string/roboto_regular_light</item>
    </style>

    <style name="textview_comments">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@string/roboto_regular_medium</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_below">@+id/comment_text</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:textColor">@color/comment_action_text_color</item>
    </style>

    <style name="textview_follows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@string/roboto_regular_medium</item>
        <item name="android:layout_below">@+id/comment_text</item>
        <item name="android:textColor">@color/white_300</item>
    </style>

    <style name="textview_username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@string/roboto_regular_medium</item>
    </style>

    <style name="textview_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@string/roboto_regular</item>
        <item name="android:lineSpacingExtra">@dimen/_2sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageView_avatar">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:src">@drawable/circle</item>
    </style>

    <style name="inner_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_290sdp</item>
        <item name="android:layout_below">@+id/image</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="margin_buttons">
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
    </style>

</resources>
